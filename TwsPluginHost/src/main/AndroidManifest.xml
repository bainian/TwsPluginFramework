<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rick.tws.pluginhost">

    <application
        android:name="com.rick.tws.pluginhost.main.HostApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.ui.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".main.ui.SettingsActivity" />
        <activity android:name=".main.ui.MessageManagerActivity" />
        <activity android:name=".debug.DebugPluginActivity" />
        <activity android:name=".debug.PluginDetailActivity" />
        <activity android:name=".debug.PluginFragmentActivity" />

        <!-- core need-->
        <provider
            android:name="com.tws.plugin.manager.PluginManagerProvider"
            android:authorities="com.tencent.tws.pluginhost.manager"
            android:exported="false" />

    </application>

</manifest>